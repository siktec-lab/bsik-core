{
    "name": "siktec/bsik",
    "type": "library",
    "description": "Lightweight CMS framework. It is designed to be easy, and extremely fast with the ability to scale up to complex applications",
    "license": "MIT",
    "authors": [
        {
          "name": "SIKTEC Labs",
          "email": "siktec.lab@gmail.com"
        }
    ],
    "repositories": [
        {
            "type": "git",
            "url": "https://github.com/shlomohass/morris-php.git"
        },
        {
            "type": "vcs",
            "url": "https://github.com/shlomohass/php-cli.git"
        }
    ],
    "require": {
        "php": ">=8.0.0",
        "twig/twig" :"^3.0",
        "ezyang/htmlpurifier": "4.*",
        "siktec/morris-php": "0.6.*",
        "monolog/monolog": "^3.0",
        "google/apiclient": "^2.4",
        "formr/formr": "1.1.*",
        "knplabs/github-api": "3.7",
        "adhocore/cli": "dev-main", 
        "composer/composer": "^2.5.4"
    },
    "autoload": {
        "psr-4" : {
            "Siktec\\Bsik\\" : "src/"
        }
    },
    "scripts": {
        "post-install-cmd": [

        ],
        "post-update-cmd": [
            
        ]
    },
    "require-dev": {
        "phpunit/phpunit": ">=9.5.0"
    },
    "minimum-stability": "dev",
    "config": {
        "allow-plugins": {
            "php-http/discovery": true
        }
    }
}
